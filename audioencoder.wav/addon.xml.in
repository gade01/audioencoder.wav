<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audioencoder.wav"
  version="2.1.0"
  name="Wav Audio Encoder"
  provider-name="jmarshall">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.audioencoder"
    extension=".wav"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Waveform Audio File Format Encoder</summary>
    <description lang="en">WAV (Waveform Audio Format) is an uncompressed sound format.</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/audioencoder.wav</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
